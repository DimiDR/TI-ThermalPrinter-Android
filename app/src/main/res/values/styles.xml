<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorTextOnPrimary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorTextOnAccent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorTextOnPrimary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.App.Button.Success" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_success</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.App.Button.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_danger</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="Widget.App.Card.Elevated" parent="Widget.App.Card">
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorTextOnPrimary</item>
        <item name="subtitleTextColor">@color/colorTextOnPrimary</item>
    </style>

    <!-- Status Button Styles -->
    <style name="Widget.App.Button.Status" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Widget.App.Button.Status.Confirmed" parent="Widget.App.Button.Status">
        <item name="android:background">@drawable/status_button_confirmed</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="Widget.App.Button.Status.Preparation" parent="Widget.App.Button.Status">
        <item name="android:background">@drawable/status_button_preparation</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="Widget.App.Button.Status.Delivery" parent="Widget.App.Button.Status">
        <item name="android:background">@drawable/status_button_delivery</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="Widget.App.Button.Status.Completed" parent="Widget.App.Button.Status">
        <item name="android:background">@drawable/status_button_completed</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="Widget.App.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <!-- SwipeRefreshLayout Styles -->
    <style name="Widget.App.SwipeRefreshLayout">
        <item name="android:background">@color/colorSurface</item>
    </style>
    
    <!-- Missing ActionBar Styles -->
    <style name="Widget.AppTheme.ActionBar.Fullscreen">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>
    
    <!-- Missing Base Widget Styles -->
    <style name="Widget">
        <item name="android:background">@color/colorSurface</item>
    </style>
    
    <style name="Widget.App">
        <item name="android:background">@color/colorSurface</item>
    </style>
    
    <style name="Widget.AppTheme">
        <item name="android:background">@color/colorSurface</item>
    </style>
    
    <style name="Widget.AppTheme.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>
</resources>